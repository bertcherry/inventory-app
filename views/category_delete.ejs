<!DOCTYPE html>
<html>
  <%- include('partials/header') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') -%>
        </div>
        <div class="col-sm-10">
          <h1><%= title %>: <%= category.name %></h1>
          <% if (category_products.length) { %>
            <p><strong>Delete or reassign the following products before attempting to delete this category:</strong>
                <div style="margin-left:20px;margin-top:20px">
                    <h2>Products</h2>
                    <ul>
                        <% category_products.forEach(product => { %>
                            <li><a href="<%= product.url %>"><%= product.name %></a></li>
                        <% }) %>
                    </ul>
                </div>
            </p>
          <% } else { %>
            <p>Do you really want to delete this category?</p>
            <form action="" method="post">
                <div class="form-group">
                    <input type="hidden" id="categoryid" class="form-control" name="categoryid" required value="<%= category._id %>">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>