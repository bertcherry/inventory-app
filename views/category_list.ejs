<!DOCTYPE html>
<html>
  <%- include('partials/header') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') -%>
        </div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if(category_list.length > 0) {category_list.forEach(category => { %>
                <li><a href="<%= category.url %>"><%= category.name %></a></li>
            <% })} else { %>
                <li>There are no categories.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>