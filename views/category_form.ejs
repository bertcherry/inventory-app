<!DOCTYPE html>
<html>
  <%- include('partials/header') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <%- include('partials/sidebar') -%>
        </div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form action="" method="post">
            <div class="form-group">
                <label for="name">Name: <input type="text" id="name" name="name" class="form-control" placeholder="Name of category" value="<%= typeof category!='undefined' ? category.name : '' %>" required></label>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
          <ul>
            <% if (typeof errors!='undefined') {errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% })} %>
            </ul>
        </div>
      </div>
    </div>
  </body>
</html>